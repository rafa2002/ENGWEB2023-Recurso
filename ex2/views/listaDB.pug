extends layout
block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Tratamentos de estética
    .w3-container
      table.w3-table-all
        tr
          th Id
          th Data
          th Nome
          th Idade 
          th Sexo
          th Número de intervenções
        
        each tratamento in tratamentos
          tr
            td #[a(href="/"+tratamento._id) #{tratamento._id}]
            td= tratamento.data
            td= tratamento.nome
            td= tratamento.idade
            td= tratamento.sexo
            td= tratamento.nr_operacoes
              
    footer.w3-container.w3-teal
