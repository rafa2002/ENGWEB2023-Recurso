extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h2 Intervenção de #{tratamento.nome} em #{tratamento.data}
        br
        .w3-container.w3-padding
            h4 ID: #{tratamento._id}
            h4 Data: #{tratamento.data}
            h4 Nome: #{tratamento.nome}
            h4 NIF: #{tratamento.nif}
            h4 Idade: #{tratamento.idade}
            h4 Número de Operações: #{tratamento.nr_operacoes}
            each operacao in tratamento.operacoes
                h4
                    a(href='/intervencoes/'+operacao.codigo)= operacao.codigo
                    | : #{operacao.nome} - #{operacao.descricao}

        footer.w3-container.w3-teal
            h5 Generated by A97642 - #[a(href="/") Return]